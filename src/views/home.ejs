function hashCode(str) {
let hash = 0;
for (let i = 0; i < str.length; i++) {
hash = ((hash << 5) - hash) + str.charCodeAt(i);
hash |= 0;
}
return hash;
}
const secretHash = hashCode("aamm"); // replace with precomputed number if you don't want secret in source
const SECRET_LEN = 4;

// buffer used for both desktop keydown and mobile input
let typedKeys = [];

// MOBILE: focus hidden input when user taps the page (or a special area/button)
function focusHiddenInput() {
const inp = document.getElementById('secret-capture');
inp.style.left = '10px'; // bring into view briefly so some browsers allow focus
inp.focus();
// move back off-screen quickly to hide it (keyboard will still remain)
setTimeout(()=> { inp.style.left = '-9999px'; }, 50);
}

// capture input events from the hidden input (mobile)
// We listen to 'input' because mobile keyboards trigger that reliably.
document.getElementById('secret-capture').addEventListener('input', (ev) => {
const value = ev.target.value || '';
// keep only last SECRET_LEN chars from the input
const lastN = value.slice(-SECRET_LEN);
// update typedKeys array to reflect those chars
typedKeys = lastN.split('').map(c => c.toLowerCase());
checkSecretBuffer();
// optionally clear the hidden input so it doesn't grow:
ev.target.value = lastN; 
});

// DESKTOP fallback: also listen to keydown globally (for physical keyboards)
document.addEventListener('keydown', (e) => {
// ignore if typing in real inputs
const el = document.activeElement;
if (el && (el.tagName === 'INPUT' || el.tagName === 'TEXTAREA' || el.isContentEditable)) {
return;
}
const k = (e.key || '').toLowerCase();
if (!k || k.length !== 1) return;
typedKeys.push(k);
if (typedKeys.length > SECRET_LEN) typedKeys.shift();
checkSecretBuffer();
});

// helper to check buffer
function checkSecretBuffer() {
if (typedKeys.length < SECRET_LEN) return;
const joined = typedKeys.join('');
if (hashCode(joined) === secretHash) {
// matched â€” trigger redirect or animation
typedKeys = [];
// example: small animation then redirect
document.body.style.transition = 'background .5s';
document.body.style.background = '#020712';
setTimeout(()=> window.location.href = 'http://localhost:3000', 600);
}
}

// UX: on first tap anywhere (except form fields) focus the hidden input so mobile keyboard captures keystrokes.
// You can change this to a specific unlock-area/button if you prefer.
document.addEventListener('touchstart', (e) => {
const tag = (e.target.tagName || '').toLowerCase();
if (tag === 'input' || tag === 'textarea' || e.target.isContentEditable) return;
focusHiddenInput();
}, {passive: true});

// also focus on click for tablets / desktop touch
document.addEventListener('click', (e) => {
const tag = (e.target.tagName || '').toLowerCase();
if (tag === 'input' || tag === 'textarea' || e.target.isContentEditable) return;
focusHiddenInput();
});
</script>









